@using jdean_budgeter.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/assets/img/faviconP.ico">
    <title>Piglet</title>
    <link href="~/assets/css/pink-love.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/assets/lib/stroke-7/style.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" />
    @*<link rel="stylesheet" href="~/assets/css/app.css" type="text/css" />*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="mai-splash-screen">
    <div class="mai-wrapper mai-login">
        <div class="main-content container">
            <div class="splash-container row">
                <div class="col-sm-6 user-message"><span class="splash-message text-right"><i class="icon s7-piggy"></i> Hello!<br> it's good to<br> see you again</span>
                <span class="alternative-message text-right">Don't have an account? <a href="@Url.Action("Register","Account")">Sign Up</a></span>
                <!--Demo Login-->
                    <!--Project Manager Demo -->
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form - horizontal form - material", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group " hidden>
                            <div class="col-xs-12">

                                <input name="Email" value="demo@demo.com" hidden />
                            </div>
                        </div>
                        <div class="form-group" hidden>
                            <div class="col-xs-12">
                                <div class="col-xs-12">
                                    <input name="password" value="Demopass1!" hidden>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-lg btn-primary btn-block">Demo</button>
                               
                                
                            </div>
                        </div>
                    }

                <!--end demo login-->
                </div>
                <div class="col-sm-6 form-message">
                    <img src="~/assets/img/pigletsmall.png" class="logo-img mb-4" alt="logo" ><span class="splash-description text-center mt-5 mb-5">Login to your account</span>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                    <form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon s7-user"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                @*<input id="username" type="text" placeholder="Username" autocomplete="off" class="form-control">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon s7-lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                @*<input id="password" type="password" placeholder="Password" class="form-control">*@
                            </div>
                        </div>
                        <div class="form-group login-submit">
                            <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
                        </div>
                        <div class="form-group row login-tools">
                            <div class="col-6 login-remember">
                                @*<label class="custom-control custom-checkbox mt-2"></label>*@
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @*<span class="custom-control-indicator"></span>*@<span class="custom-control-description">Remember me</span>
                                
                            </div>
                            <div class="col-6 pt-2 text-right login-forgot-password"><a href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a></div>
                        </div>
                    </form>
                    }
                    <div class="out-links"><a href="#">© @DateTime.Now.Year PigletApp</a></div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/lib/tether/js/tether.min.js" type="text/javascript"></script>
    <script src="~/assets/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/js/app.js" type="text/javascript"></script>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });

    </script>
</body>
</html>

