@model IEnumerable<jdean_budgeter.Models.CodeFirst.Household>

@{
    ViewBag.Title = "PigletApp";
}

<h2>My Household</h2>
<div class="col-md-4">


    <p>

        <a href="@Url.Action("CreateHouseholdMember","Account")" class="btn btn-dark">Invite New Member</a>
    </p>
</div>
<p>
    @Html.ActionLink("Create New Household", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
