@model jdean_budgeter.Models.CodeFirst.BankAccount

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-sm-4"> <h2>@Model.Name</h2><br />
            <p>
               
                @Html.ActionLink("Back to List", "Index")<br />
                <a href="@Url.Action("Create", "Categories")" class="btn btn-rounded btn-primary"><span class="icon s7-plus"> </span> Add Category</a>
                <a href="@Url.Action("Create", "Transactions")" class="btn btn-rounded btn-dark"><span class="icon s7-plus"> </span> Add Transaction</a>

            </p></div>


     
        <div class="col-sm-4">
          
        </div>
        <div class="col-sm-4">
            <div class="panel-full-color-dark" style="float:right">

                <div class="panel-body">
                    <p>
                        <h3>  $ @Html.DisplayFor(model => model.Balance)</h3>
                    </p>
                </div>
            </div>
        </div>

    </div>
  <hr />
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    Latest Transactions
                    @*<span style="float:right"> <a href="@Url.Action("Create", "Categories")" class="btn btn-rounded btn-primary"><span class="icon s7-plus"> </span> Add New Category</a></span>*@

                </div>
                <div class="panel-body">
                    <table id="table2" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Trans. Id</th>
                                <th>Date </th>
                                <th>Payee</th>

                                @*<th>Category</th>*@

                                <th>Amount</th>
                                <th> Category</th>
                                <th>Reconciled Amount</th>
                                <th>Reconciled Y/N</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Transactions)
                            {
                                <tr class="odd gradeX">
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PmtDate)</td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    @*<td>@Html.DisplayFor(modelItem => item.ExpenseId)</td>
                                        *<td> @Html.DisplayFor(modelItem => item.Category)</td>*@

                                    <td class="center">$@Html.DisplayFor(modelItem => item.Amount)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.Category.Name)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.RecAmt) </td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.RecStatus) </td>
                                    <td>
                                       @* <a href="@Url.Action("Edit", "Transactions",new { id = item.Id })">Edit</a> |
    @Html.ActionLink("Details", "Details", new { id = item.Id }) |)*@
    @Html.ActionLink("Delete", "Delete","Transactions", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
